<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="jpaStudy">

        <class>study.jpa.JpaMain</class>

        <properties>

            <!-- 필수 속성 -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="homespringuser"/>
            <property name="javax.persistence.jdbc.password" value="8615"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/homespring?serverTimezone=UTC" />

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>




        </properties>
    </persistence-unit>
</persistence>